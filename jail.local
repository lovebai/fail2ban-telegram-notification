[DEFAULT]
bantime = 3600        # 禁止时间设置为1小时
findtime = 600        # 检查过去10分钟内的失败尝试
maxretry = 5          # 允许最多5次失败尝试
ignoreip = 127.0.0.1/8 172.0.0.1/8   # 忽略本地回环地址


[sshd]
enabled = true
port    = ssh
filter  = sshd
logpath = /var/log/auth.log
maxretry = 3
action  = iptables[name=SSH, port=22, protocol=tcp] # prot 改为自己的ssh 端口
